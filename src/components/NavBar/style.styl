@import "../../assets/stylus/variable2.styl"

.nav-bar
  display flex
  height 44px
  line-height 44px
  font-size $font-size-medium
  background-color $color-bg
  .tab-item
    flex 1
    text-align center
    .tab-link
      padding-bottom 5px
      color $color-font-d
    &.router-link-active
      .tab-link
        color $color-theme
        border-bottom 2px solid $color-theme